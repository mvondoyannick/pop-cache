<h1>Creation de compte</h1>
<p>Find me in app/views/home/private.html.erb</p>
<div class="row">
  <div class="small-2 large-4 columns">&nbsp;</div>
  <div class="small-4 large-4 columns">
    <%= form_tag(home_create_path, method: "get") do %>
        <div class="grid-container">
            <div class="grid-x grid-padding-x">
            <div class="medium-6 cell">
                <%= label_tag(:nom, "Nom") %>
                <%= text_field_tag(:nom) %>
            </div>
            <div class="medium-6 cell">
                <%= label_tag(:prenom, "Prénom") %>
                <%= text_field_tag(:prenom) %>
            </div>
           
            </div>
        </div>
        <div class="grid-container">
            <div class="grid-x grid-padding-x">
            <div class="medium-6 cell">
                <%= label_tag(:phone, "Numéro téléphone") %>
                <%= text_field_tag(:phone) %>
            </div>
            <div class="medium-6 cell">
                <%= label_tag(:cni, "Numéro CNI") %>
                <%= text_field_tag(:cni) %>
            </div>
           
            </div>
        </div>
        <div class="grid-container">
            <div class="grid-x grid-padding-x">
            <div class="medium-6 cell">
                <%= label_tag(:password, "Mot de passe") %>
                <%= text_field_tag(:password) %>
            </div>
            <div class="medium-6 cell">
                <%= label_tag(:password_confirm, "Confirmer mot de passe") %>
                <%= text_field_tag(:password_confirm) %>
                <br>
                 <%= submit_tag "Creer nouveau compte", class: "button" %>
            </div>
           
            </div>
        </div>
    <% end %>
  </div>
  <div class="small-6 large-4 columns">&nbsp;</div>
</div>
