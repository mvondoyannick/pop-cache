<div class="row justify-content-center" style="margin-top: 5rem;">
  <div class="col-xl-8 col-lg-12 col-md-9">

    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
          <div class="col-lg-6">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4"><%= image_tag('product_logo.png', size: '200x50') %></h1>
              </div>
              <%= form_tag(client_attemp_login_path, method: :post, class: 'user') do %>
                  <div class="form-group">
                    <%= text_field_tag :nom, nil, class: 'form-control form-control-user', placeholder: 'Votre nom', autocomplete: 'off', style: "background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;" %>
                  </div>
                  <div class="form-group">
                    <%= text_field_tag :prenom, nil, class: 'form-control form-control-user', placeholder: 'Votre prenom', autocomplete: 'off', style: "background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;" %>
                  </div>
                  <div class="form-group">
                    <%= telephone_field_tag :email_or_phone, nil, class: 'form-control form-control-user', placeholder: 'Numero de téléphone', autocomplete: 'off', style: "background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;" %>
                  </div>
                  <div class="form-group">
                    <%= text_field_tag :id, nil, class: 'form-control form-control-user', placeholder: 'Votre piece d identité', autocomplete: 'off', style: "background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;" %>
                  </div>
                  <div class="form-group">
                    <%= password_field_tag :password, nil, class: "form-control form-control-user", placeholder: "Mot de passe", autocomplete: "off", style: "background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;" %>
                  </div>
                  <div class="form-group">
                    <%= password_field_tag :password_confirmation, nil, class: "form-control form-control-user", placeholder: "Confirmer votre mot de passe", autocomplete: "off", style: "background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;" %>
                  </div>
                  <%= submit_tag "Creer mon compte", class: "btn btn-primary btn-user btn-block" %>
                  <hr>
                  <a href="index.html" class="btn btn-google btn-user btn-block">
                    <i class="fab fa-google fa-fw"></i> Login with Google
                  </a>
                  <a href="index.html" class="btn btn-facebook btn-user btn-block">
                    <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                  </a>
              <% end %>
              <hr>
              <div class="text-center">
                <%= link_to 'Mot de passe oublié?', nil, class: 'small' %>
              </div>
              <div class="text-center">
                <%= link_to 'Nouveau? Creer son compte!', nil, class: 'small' %>
              </div>
              <div class="text-center">
                <% flash.each do |key, value| %>
                  <div class="alert alert-<%= key %>"><%= value %></div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
