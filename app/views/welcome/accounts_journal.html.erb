
<div class="card">
  <div class="card-header border-0">
    <h3 class="card-title">JOURNAL DES COMPTES</h3>
    <div class="card-tools">
      <a href="#" class="btn btn-tool btn-sm">
        <i class="fas fa-download"></i>
      </a>
      <a href="#" class="btn btn-tool btn-sm">
        <i class="fas fa-bars"></i>
      </a>
    </div>
  </div>
  <div class="card-body p-0">
    <table class="table table-striped table-valign-middle mb-5" id="table">
      <thead>
      <tr>
        <th>#</th>
        <th>ACCOUNT</th>
        <th>PROPRIETAIRE</th>
        <th>MONTANT</th>
        <th>TRANSACTION ID</th>
        <th>ACTION</th>
        <th>DATE</th>
      </tr>
      </thead>
      <tbody>
      <% @log.each do |log| %>
        <tr>
          <td width="5%">
            <input type="checkbox" name="vehicle" value="<%= log.id %>">
          </td>
          <td><%= link_to Customer.find(log.customer_id).code, nil %></td>
          <td>
            <%= Customer.find(log.customer_id).complete_name %>
          </td>
          <td>
            <%= log.amount %> CFA
          </td>
          <td>
            <%= log.code %>
          </td>
          <td>
            <%= log.flag %>
          </td>
          <td><%= log.created_at.strftime("%d-%m-%Y, %Hh:%M") %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<hr>

<script>
    $(document).ready(function () {
        var table = $("#table").DataTable();
        $("#table-1").DataTable();

        $('#table tbody').on('mouseenter', 'td', function () {
            var colIdx = table.cell(this).index().column;

            $( table.cells().nodes() ).removeClass( 'highlight' );
            $( table.column( colIdx ).nodes() ).addClass( 'highlight' );
        });
    });
</script>