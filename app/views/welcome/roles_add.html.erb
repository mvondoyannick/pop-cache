<div class="row">
    <!-- left column -->
    <div class="col-md-6">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
        <h3 class="card-title">Ajouter un nouveau rôle</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
      <%= form_tag({controller: 'welcome', action: :roles_add}) do %>
        <div class="card-body">
          <div class="form-group">
            <label for="exampleInputEmail1">Nom du rôle</label>
            <%= text_field_tag :name, nil, class: "form-control", placeholder: "Nom permettant d'identifier le rôle", autocomplete: "off", style: "background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;" %>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Description du rôle</label>
            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Rôle des marchands" autocomplete="off" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Slug (Automatique)</label>
            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Slug du rôle (automatique)" autocomplete="off" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
          </div>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Définir comme rôle par défaut?</label>
          </div>
        </div>

        <div class="card-footer">
          <button type="submit" class="btn btn-primary">Enregistrer</button>
        </div>
      <% end %>
    </div>
    <!-- /.card -->

    </div>
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Présentation des rôles</h3>
            </div>
            <div class="card-body">
                <h5 class="card-title">Card title</h5>
                <p class="card-text">Les rôle sur la plateforme sont des niveaux d'accès permettant de donner des droits limités ou etendu aux utilisateurs de la
                plateforme .</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>

        </div>
    </div>
</div>