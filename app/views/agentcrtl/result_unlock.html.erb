<div class="container">
  <% if params[:flag] == true %>

    <div class="card o-hidden border-0 shadow-lg my-5" >
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
          <div class="col-lg-7">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Valider le blocage de <%= params[:phone] %></h1>
              </div>
              <%= form_tag({action: "search", method: :post}, {class: "user"}) do %>
                <div class="form-group">
                  <input type="text" class="form-control form-control-user" id="exampleFirstName" value="<%= current_agent.complete_name %>" disabled style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;">
                </div>
                <div class="row">
                  <div class="col-lg-6">
                    <div class="form-group">
                      <input type="text" class="form-control form-control-user" id="exampleFirstName" value="<%= params[:phone] %>" disabled style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;">
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="form-group">
                      <input type="text" class="form-control form-control-user" id="exampleFirstName" value="<%= params[:sexe] %>" disabled style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;">
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-6">
                    <div class="form-group">
                      <input type="text" class="form-control form-control-user" id="exampleFirstName" value="<%= params[:token] %>" disabled style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;">
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="form-group">
                      <input type="text" class="form-control form-control-user" id="exampleFirstName" value="<%= params[:cni] || "CNI non declarée" if params[:cni].nil? %>" disabled style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;">
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <input type="text" class="form-control form-control-user" id="exampleFirstName" value="<%= params[:name] %> <%= params[:second_name] %>" disabled style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;">
                </div>
                <div class="form-group">
                  <%= text_field_tag :motif, nil, class: 'form-control form-control-user', placeholder: "Motif de blocage du compte #{params[:phone]}" %>
                </div>
                <div class="form-group">
                  <%= text_field_tag :cni_ou_declaration, nil, class: 'form-control form-control-user', placeholder: "Numéro de CNI ou certificat de parte du compte #{params[:phone]}" %>
                </div>
                <div class="form-group">
                  <%= file_field_tag :formulaire, class: 'form-control form-control-file', placeholder: "Formulaire de blocage du compte #{params[:phone]}" %>
                </div>
                <div class="row">
                  <div class="col-lg-6">
                    <%= link_to "Annuler", root_path, class: 'btn btn-danger btn-user btn-block' %>
                  </div>
                  <div class="col-lg-6">
                    <%= submit_tag "Valider le blocage", class: 'btn btn-primary btn-user btn-block' %>
                  </div>
                </div>

              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

  <% else %>

    <div class="card o-hidden border-0 shadow-lg my-5" >
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
          <div class="col-lg-7">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Cet utilisateur est deja bloqué </h1>
              </div>
              <p class="text-lg text-lg-center text-gray-700">
                Nous ne sommes pas en messure de bloquer un utilisateur deja bloqué sur la plateforme!
              </p>
              <br>
              <br><br><br><br><br>
              <div class="row">
                <div class="col-lg-6">
                  <%= link_to "Annuler", root_path, class: "btn btn-danger btn-user btn-block" %>
                </div>
                <div class="col-lg-6">
                  <%= link_to "Le débloquer?", agentcrtl_unlock_customer_account_path(phone: params[:phone]), class: "btn btn-primary btn-user btn-block" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  <% end %>

</div>