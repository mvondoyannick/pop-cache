<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
          <div class="col-lg-7">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Ajouter un utilisateur</h1>
              </div>
              <%= form_tag({action: "intent_new_customer", method: :post}, {class: "user"}) do %>
                <div class="form-group">
                  <input type="text" class="form-control form-control-user" id="exampleFirstName" value="<%= current_agent.complete_name %>" disabled style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;">
                </div>
                <div class="form-group">
                  <%= text_field_tag :name, nil, class: 'form-control form-control-user', placeholder: 'Nom client' %>
                </div>
                <div class="form-group">
                  <%= text_field_tag :second_name, nil, class: 'form-control form-control-user', placeholder: 'Prenom client' %>
                </div>
                <div class="form-group">
                  <%= telephone_field_tag :phone, nil, class: 'form-control form-control-user', placeholder: 'Numéro de téléphone' %>
                </div>
                <div class="form-group">
                  <%= telephone_field_tag :phone_confirm, nil, class: 'form-control form-control-user', placeholder: 'Confirmer Numéro de téléphone' %>
                </div>
                <div class="form-group">
                  <%= text_field_tag :cni, nil, class: 'form-control form-control-user', placeholder: 'Numéro Carte identité / Passport' %>
                </div>
                <div class="form-group">
                  <%= file_field_tag :cni_file, class: 'form-control form-control-user' %>
                </div>
                <div class="form-group">
                  <%= password_field_tag :password_operateur, nil, class: 'form-control form-control-user', placeholder: 'Mot de passe opérateur de saisie' %>
                </div>
                <%= submit_tag "Soumettre la création", class: 'btn btn-primary btn-user btn-block' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>